define downtime {
<% if @hostname -%>
	host_name            <%= hostname %>
<% end -%>
<% if @hostgroups -%>
	hostgroups           <%= hostgroups.join(' ') %>
<% end -%>
<% if @servicegroups -%>
	servicegroups        <%= servicegroups.join(' ') %>
<% end -%>
<% if @service_description -%>
	service_description  <%= service_description %>
<% end -%>
<% if @author -%>
	author               <%= author %>
<% end -%>
<% if @comment -%>
	comment              <%= comment %>
<% end -%>
	duration             <%= duration %>
<% @downtime_period.each do |val| -%>
	downtime_period      <%= val %>
<% end -%>
	fixed                <%= fixed %>
	propagate            <%= propagate %>
	register             <%= register %>
}
